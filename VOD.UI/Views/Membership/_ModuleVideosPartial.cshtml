@model IEnumerable<VideoDTO>


@foreach (var video in Model)
{
    <div class="card-body module-video">
        <a href="~/Membership/Video/@video.VideoId"
           class="no-text-decoration">
            <div class="media">
                <div class="media-left hidden-xs overflow-hidden">
                    <img src="@video.VideoThumbnail" width="100">
                </div>
                <div class="media-body small-left-margin text-dark">
                    <h5 class="no-margin">@video.VideoTitle</h5>
                    <p class="text-muted no-margin">
                        <i class="material-icons vertical-align
                        text-small">alarm</i>
                        <span class="vertical-align text-small"> @video.VideoDuration minutes</span>
                    </p> <p class="no-margin">@video.VideoDescription</p>
                </div>
            </div>
        </a>
    </div>
}
     