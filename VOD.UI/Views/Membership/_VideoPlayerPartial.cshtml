@model VideoViewModel
<div class="card no-border-radius">
    @if (Model.Video.VideoUrl != null)
    {
        <div class="video-player">
            <iframe src="@Model.Video.VideoUrl" frameborder="0"
                    allow="accelerometer; autoplay; encrypted-media;
                    gyroscope; picture-in-picture" allowfullscreen></iframe>
        </div>
    }
    <div class="card-body">
        <h2>@Model.Video.VideoTitle</h2>
        <p class="text-muted">
            <i class="material-icons vertical-align text-small">movie</i> Lesson @Model.LessonInfo.LessonNumber/ @Model.LessonInfo.NumberOfLessons&nbsp;&nbsp;
            <i class="material-icons vertical-align text-small">alarm</i> @Model.Video.VideoDuration minutes
        </p>
        <div class="video-course">
            <img src=/images/laptop.jpg"@Model.Course.CourseImageUrl">
            <span class="vertical-align text-large"> @Model.Course.CourseTitle</span>
        </div>
    </div>
    <hr class="no-margin">
    <div class="card-body">
        @Model.Video.VideoDescription
    </div>
</div>